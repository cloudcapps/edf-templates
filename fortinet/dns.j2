config system dns
    set primary {{dns.servers[0]}}
    set secondary {{dns.servers[1]}}
    set source-ip "{{device.primary_ip.address.ip}}"
    set interface-select-method sdwan
end
config system ddns
    edit 1
        set ddns-server FortiGuardDDNS
        set ddns-domain "{{device.site.facility}}.fortiddns.com"
        set monitor-interface "ISP1"
    next
end